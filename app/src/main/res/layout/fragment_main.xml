<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/record_lay"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="right"
            android:background="@color/enoxs_pupler">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Receive"
                android:id="@+id/txt_configure"
                android:autoText="false"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/enoxs_pupler"
                android:background="@color/enoxs_yellow"
                android:gravity="center"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Control"
                android:id="@+id/txt_show"
                android:autoText="false"
                android:background="@color/enoxs_pupler"
                android:textColor="@color/enoxs_yellow"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:scrollbars="none"
            android:background="@color/enoxs_yellow" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fillViewport="false"
            android:background="#5dcdef"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>