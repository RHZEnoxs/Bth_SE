<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/enoxs_yellow">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:background="@drawable/sideline"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_margin="7dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/txt_inf"
                    android:textColor="@color/enoxs_white"
                    android:layout_margin="3dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="@drawable/sideline">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/fab_dislink"
            android:background="@drawable/circle_pupler"
            android:src="@drawable/ic_bluetooth_disabled_black_24dp"
            android:layout_marginRight="24dp"
            android:visibility="gone" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/fab_menu"
            android:background="@drawable/circle_pupler"
            android:src="@drawable/ic_fab_menu"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/fab_clear"
            android:background="@drawable/circle_pupler"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_marginLeft="24dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>